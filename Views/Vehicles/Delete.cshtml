@model Vehicle
<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-sm btn-icon btn-light" asp-action="Index" asp-controller="Vehicles" >
                    <i class="fa fa-arrow-left"></i>
                </a>
                <i class="fa fa-truck-plow mx-2"></i><b>Delete Vehicle </b>
            </div>
            <div class="card-body">
                <p><b>Vehicle Id:</b> @ViewBag.Vehicle.Id</p>
                <p><b>Vehicle Name:</b> @ViewBag.Vehicle.VehicleName</p>

                <form asp-action="Drop" asp-controller="Vehicles" class="mt-4" method="POST">
                    <input type="hidden" asp-for="Id" value="@ViewBag.Vehicle.Id">
                    <button type="submit" class="btn btn-danger rounded-pill">Delete Vehicle</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col"></div>
</div>