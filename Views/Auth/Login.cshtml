@{
    Layout = "_Theme";
}

@model User
<div class="row mt-4">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header text-center">
                <h1>Login</h1>
            </div>
            <div class="card-body py-5">
                <form asp-action="TestLogin" asp-controller="Auth" method="POST">
                    <div class="form-group">
                        <label for="">Username:</label>
                        <input type="text" class="form-control form-control-solid" asp-for="Username">
                    </div>
                    <div class="form-group">
                        <label for="">Password:</label>
                        <input type="password" class="form-control form-control-solid" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success rounded-pill px-5">
                            Login
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>