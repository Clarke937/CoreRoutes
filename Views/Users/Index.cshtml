@model User
<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-header text-body">
                <i class="fa fa-user-friends mr-2"></i>
                <b>List of Users</b>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="GET">
                    <div class="row">
                        <div class="col-11">
                            <input type="text" name="search" class="form-control form-control-solid" placeholder="Search by Username or Email">
                        </div>
                        <div class="col">
                            <button class="btn btn-icon btn-primary" type="submit"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
                
                <table class="table table-bordered table-hovered mt-5">
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th class="fit">Options</th>
                    </tr>
                    @foreach (User user in ViewBag.Users)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.Role.UserRole</td>
                            <td class="fit">
                                <a class="btn btn-sm btn-icon btn-light" asp-route-id="@user.RoleFK" asp-action="Edit">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-sm btn-icon btn-light"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-body py-5 text-center">
                <img src="~/img/undraw/employed.png" alt="" class="img-fluid">
                <a href="#" class="btn btn-success rounded-pill mt-5">Create New User</a>
            </div>
        </div>
    </div>
</div>