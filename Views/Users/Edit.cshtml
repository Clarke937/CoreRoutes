@model User
<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-header text-body">
                <a class="btn btn-sm btn-icon btn-light" asp-action="Index" asp-controller="Users" >
                    <i class="fa fa-arrow-left"></i>
                </a>
                <i class="fa fa-user-friends mx-2"></i><b>Edit User Information</b>
            </div>
            <div class="card-body">
                <form asp-action="Update" method="POST" class="col-6">
                    <input type="hidden" asp-for="Id" value="@ViewBag.User.Id">
                    <div class="form-group">
                        <label for="">Username:</label>
                        <input type="text" asp-for="Username" class="form-control form-control-solid" value="@ViewBag.User.Username">
                    </div>
                    <div class="form-group">
                        <label for="">Email:</label>
                        <input type="text" asp-for="Email" class="form-control form-control-solid" value="@ViewBag.User.Email">
                    </div>
                    <div class="form-group">
                        <label for="">Password:</label>
                        <input type="text" asp-for="Password" class="form-control form-control-solid">
                    </div>
                    <div class="form-group">
                        <label for="">Role:</label>
                        <select asp-for="RoleFK" class="form-control form-control-solid">
                            @foreach (Role rol in ViewBag.Roles){
                                <option value="@rol.Id">@rol.UserRole</option>
                            }
                        </select>
                    </div>
                    <div class="form-group mt-5">
                        <button class="btn btn-success rounded-pill" type="submit">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>