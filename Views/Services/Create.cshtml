@model ServiceType

<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-header text-body">
                <a class="btn btn-sm btn-icon btn-light" asp-action="Index" asp-controller="Services" >
                    <i class="fa fa-arrow-left"></i>
                </a>
                <i class="fa fa-truck-plow mx-2"></i><b>Create New Service Type</b>
            </div>
            <div class="card-body">
                <form asp-action="Insert" method="POST" class="row">
                    <div class="form-group col-12">
                        <label>Service Name</label>
                        <input type="text" class="form-control form-control-solid" asp-for="ServiceName">
                    </div>
                    <div class="form-group col-6">
                        <label>Service Price:</label>
                        <input type="text" class="form-control form-control-solid" asp-for="Price">
                    </div>
                    <div class="form-group col-6">
                        <label>Vehicle:</label>
                        <select class="form-control form-control-solid" asp-for="VehicleFK">
                            @foreach (Vehicle ve in ViewBag.Vehicles)
                            {
                                <option value="@ve.Id">@ve.VehicleName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-12 mt-5">
                        <button class="btn btn-primary rounded-pill">Create Services Type</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</div>