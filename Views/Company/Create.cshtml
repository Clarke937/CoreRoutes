@model Company
<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-sm btn-icon btn-light" asp-action="Index" asp-controller="Company" >
                    <i class="fa fa-arrow-left"></i>
                </a>
                <i class="fa fa-store-alt mx-2"></i><b>Create New Company</b>
            </div>
            <div class="card-body">
                <form asp-action="Insert" class="row">
                    <div class="form-group col-12">
                        <label for="">Company Name</label>
                        <input type="text" class="form-control form-control-solid" asp-for="CompanyName">
                    </div>
                    <div class="form-group col-6">
                        <label for="">Phone</label>
                        <input type="text" class="form-control form-control-solid" asp-for="Phone">
                    </div>
                    <div class="form-group col-6">
                        <label for="">Email</label>
                        <input type="text" class="form-control form-control-solid" asp-for="Email">
                    </div>
                    <div class="form-group col-12">
                        <label for="">Country</label>
                        <input type="text" class="form-control form-control-solid" asp-for="Country">
                    </div>
                    <div class="form-group col-12">
                        <label for="">Central Address</label>
                        <input type="text" class="form-control form-control-solid" asp-for="CentralAddress">
                    </div>
                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-success rounded-pill mt-5">
                            Create New Company
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
